<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fdi.pad.pethouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- MAP -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/favicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/favicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".userRegistration.ActivityRegistrationName" />
        <activity android:name=".userRegistration.ActivityRegistrationEmail" />

        <activity android:name=".userRegistration.ActivityRegistrationPassword" />
        <activity android:name=".userRegistration.ActivityRegistrationBirthDate" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".home.ActivityHome" />
        <activity android:name=".home.user.EditProfile" />
        <activity android:name=".home.home.AdCreate" />
        <activity android:name=".home.settings.InfoApp" />
        <activity android:name=".home.pet.PetCreate" />
        <activity android:name=".home.pet.PetProfile" />
        <activity android:name=".home.pet.PetMod" />
    </application>

</manifest>